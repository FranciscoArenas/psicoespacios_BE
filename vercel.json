{
  "version": 2,
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "builds": [
    {
      "src": "dist/main.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "includeFiles": ["dist/**/*.js", "node_modules/**/*.js"]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, PATCH, OPTIONS",
        "Cache-Control": "s-maxage=0"
      }
    }
  ],
  "env": {
    "DATABASE_URL": "postgresql://neondb_owner:npg_ORBSApcN7Vd5@ep-plain-sound-a48dlyhv-pooler.us-east-1.aws.neon.tech/psicoespacios?sslmode=require",
    "DATABASE_HOST": "ep-silent-night-a4hfbw4c-pooler.us-east-1.aws.neon.tech",
    "DATABASE_USER": "neondb_owner",
    "DATABASE_PASSWORD": "npg_ORBSApcN7Vd5",
    "DATABASE_NAME": "neondb",
    "NODE_ENV": "production",
    "JWT_SECRET": "${JWT_SECRET}",
    "JWT_EXPIRATION": "24h"
  }
}
