{
  "version": 2,
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"]
    }
  ],
  "env": {
    "DATABASE_URL": "${DATABASE_URL}",
    "NODE_ENV": "production",
    "JWT_SECRET": "${JWT_SECRET}",
    "JWT_EXPIRES_IN": "1d"
  }
}
